<%= simple_form_for @item_price, html: { class: 'form-horizontal' } do |f| %>
  
  <!-- Modal Trigger -->
  <a class="waves-effect waves-light btn modal-trigger" href="#modal1">Modal</a>
  <!-- Modal Structure -->
  <div id="modal1" class="modal">
    <div class="modal-content">
      <h4>Edit Price</h4>
      <div class="input-field col s3">
        <%= f.label :price %>
        <%= f.text_field :price %>
      </div>
      <%= f.input :start_date, as: :hidden, input_html: {value: Date.today } %>
      <%= f.input :end_date, as: :hidden, input_html: {value: nil } %>
      <%= f.input :item_id, as: :hidden, input_html: {value: @item.id } %>
    </div>
    <div class="col s3">
      <div class="form-actions">
        <%= f.submit nil, :class => 'button radius' %>
        <%= link_to 'Cancel', items_path, :class => 'button alert radius' %>
      </div>
   </div>
  </div>
<%end%>

