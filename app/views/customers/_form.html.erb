<%= simple_nested_form_for @customer, html: { class: 'form-horizontal' } do |f| %>
  <div class="row">
    <div class="span7">
      <fieldset>
        <legend><%= controller.action_name.capitalize %> Customer</legend>
        <%= f.input :first_name, input_html: {class: "avg"} %>
        <%= f.input :last_name, input_html: {class: "avg"} %>
        <%= f.input :phone, input_html: {class: "avg"} %>
        <%= f.input :email, input_html: {class: "avg"} %>
      </fieldset>
    </div>

  <div class="span5">
      <legend>Users for this Customer</legend>
        <div id="user">
          <%= f.simple_fields_for :users do |user_form| %>
            <%= f.input :username, input_html: {class: "avg"} %>
            <%= f.input :password, input_html: {class: "avg"} %>
            <%= f.input :password_confirmation, input_html: {class: "avg"} %>
          <% end %> 
        </div> 
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'button radius' %>
    <%= link_to 'Cancel', customers_path, :class => 'button alert radius' %>
  </div>
<% end %>