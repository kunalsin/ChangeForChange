<div class="contain-to-grid">
    <section class="top-bar-section">
      <ul class="right">
        <!-- link to home -->
        <li><%= link_to "Home", home_path %></li>
        <% if !logged_in? %>
          <li><%= link_to "View Menu", items_path %></li>
          <li><%= link_to "Login", login_path %></li>
          <li><%= link_to "Register", signup_path %></li>
        <% end %>

        <!-- ADMIN ONLY OPTIONS -->
        <% if logged_in? && (current_user.role?(:admin)) %>

          <!-- options for orders -->
          <li><a class="dropdown-button" data-activates="orders">Orders<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
            <ul id="orders" class="dropdown-content">
              <li><%= link_to "All Orders", orders_path %></li>
              <li><%= link_to "New Order", new_order_path %></li>
            </ul>

          <!-- options for users -->
          <li><a class="dropdown-button" data-activates="users">Users<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
            <ul id="users" class="dropdown-content">
              <li><%= link_to "Customers", customers_path %></li>
              <li><%= link_to "Create Users", new_user_path %></li>
            </ul>

           <!-- options for address -->
           <li><a class="dropdown-button" data-activates="addresses">Addresses<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
            <ul id="addresses" class="dropdown-content">
              <li><%= link_to "All Addresses", addresses_path %></li>
              <li><%= link_to "Create Address", new_address_path %></li>
            </ul>

          <!-- options for items -->
          <li><a class="dropdown-button" data-activates="items">Items<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
            <ul id="items" class="dropdown-content">
              <li><%= link_to "All Items", items_path %></li>
              <li><%= link_to "Add an Item", new_item_path %></li>
            </ul>
          </li>
        <% end %>

      <% if logged_in? && (current_user.role?(:customer)) %>

        <!-- options for items -->
        <li><%= link_to "View Menu", items_path %></li>

        <!-- options for orders -->
        <li><a class="dropdown-button" data-activates="orders">Orders<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
        <ul id="orders" class="dropdown-content">
          <li><%= link_to "My Orders", orders_path %></li>
          <li><%= link_to "New Order", new_order_path %></li>
        </ul>

        <!-- options for addresses -->
        <li><a class="dropdown-button" data-activates="addresses">Addresses<i class="mdi-navigation-arrow-drop-down right"></i></a></li>
        <ul id="addresses" class="dropdown-content">
          <li><%= link_to "My Addresses", addresses_path %></li>
          <li><%= link_to "Add an Address", new_address_path %></li>
        </ul>
      <% end %>

     <% if logged_in? %>
        <li><a class="dropdown-button" data-activates="current"><%=current_user.username %><i class="mdi-navigation-arrow-drop-down right"></i></a></li>
        <ul id="current" class="dropdown-content">
          <li><%= link_to "Settings", customers_path %></li>
          <li><%= link_to 'Logout', logout_path %></li>
        </ul>
      <% end %>
    </ul>
  </div>